{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.3",
      "ext-pdo": "*",
        "slim/http": "^1.2",
        "zircote/swagger-php": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "selective/test-traits": "^1.0"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "App\\Test\\": "tests/"
      }
    },
    "scripts": {
      "test": "phpunit --configuration tests/phpunit.xml",
      "test:coverage": "phpunit --configuration tests/phpunit.xml --coverage-clover tests/build/logs/clover.xml --coverage-html tests/build/coverage"
    },
  "description": "Simple book API"
}
